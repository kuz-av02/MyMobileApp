<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <!-- Верхняя панель с заголовком и кнопкой назад -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#410FA3"
            android:paddingStart="24dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#410FA3"
                    android:src="@drawable/arrow_left" />

                <TextView
                    android:id="@+id/signup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/fredoka_medium"
                    android:gravity="start"
                    android:paddingRight="64dp"
                    android:text="@string/word_practice"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="normal" />
            </LinearLayout>

        </LinearLayout>

        <!-- Блок с контентом -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <!-- Текстовые поля и кнопки для проверки -->
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:fontFamily="@font/fredoka_bold"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:layout_marginTop="34dp"
                android:text="gardener"/>

            <TextView
                android:id="@+id/trans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:fontFamily="@font/fredoka_regular"
                android:textColor="@color/text_color"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:text="[ 'gɑ:dnə ]"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/first_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/rounded_active"
                android:backgroundTint="@color/button_background"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/fly"
                android:gravity="center"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_marginHorizontal="24dp"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/second_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_active"
                android:backgroundTint="@color/button_background"
                android:fontFamily="@font/fredoka_medium"
                android:gravity="center"
                android:text="@string/gardener"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_marginHorizontal="24dp"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/third_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:background="@drawable/rounded_active"
                android:backgroundTint="@color/button_background"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/gladius"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_marginHorizontal="24dp"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/fourth_btn"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_active"
                android:backgroundTint="@color/button_background"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/dog"
                android:gravity="center"
                android:textColor="@color/black"
                android:textAllCaps="false"
                android:layout_marginHorizontal="24dp"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- Нижняя панель с кнопками -->
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:backgroundTint="@color/colorPrimary"
            android:layout_height="0dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_active"
                android:backgroundTint="@color/bluee"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/check"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginHorizontal="24dp"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_active"
                android:backgroundTint="@color/bluee"
                android:fontFamily="@font/fredoka_medium"
                android:text="@string/next"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginHorizontal="24dp"
                android:textSize="20sp" />
        </LinearLayout>

</LinearLayout>



